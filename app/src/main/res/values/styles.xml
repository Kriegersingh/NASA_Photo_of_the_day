<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/text_28</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DateAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="descriptionAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/brandon_text_medium</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>